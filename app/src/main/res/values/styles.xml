<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- مربع أبيض -->
    <style name="ChessSquareLight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@color/chess_white</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- مربع أزرق -->
    <style name="ChessSquareDark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@color/chess_blue</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>

